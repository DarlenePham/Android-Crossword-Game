<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".EasyLevelScreen">

    <TextView
        android:id="@+id/e_B"
        android:layout_width="@dimen/letter_box_size"
        android:layout_height="@dimen/letter_box_size"
        android:layout_marginStart="25dp"
        android:layout_marginTop="10dp"
        android:text="B"
        android:textColor="@color/black"
        android:background="@color/yellow"
        android:textSize="@dimen/letter_size"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/e_R" />

    <TextView
        android:id="@+id/e_S"
        android:layout_width="@dimen/letter_box_size"
        android:layout_height="@dimen/letter_box_size"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:text="S"
        android:background="#9C27B0"
        android:textColor="@color/black"
        android:textSize="@dimen/letter_size"
        android:gravity="center"
        app:layout_constraintStart_toEndOf="@+id/e_B"
        app:layout_constraintTop_toBottomOf="@+id/e_U" />

    <TextView
        android:id="@+id/e_L"
        android:layout_width="@dimen/letter_box_size"
        android:layout_height="@dimen/letter_box_size"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:background="@color/teal_700"
        android:gravity="center"
        android:text="L"
        android:textColor="@color/black"
        android:textSize="@dimen/letter_size"
        app:layout_constraintStart_toEndOf="@+id/e_U"
        app:layout_constraintTop_toBottomOf="@+id/gridLayout" />

    <TextView
        android:id="@+id/e_U"
        android:layout_width="@dimen/letter_box_size"
        android:layout_height="@dimen/letter_box_size"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:text="U"
        android:textColor="@color/black"
        android:background="@color/purple_200"
        android:textSize="@dimen/letter_size"
        android:gravity="center"
        app:layout_constraintStart_toEndOf="@+id/e_R"
        app:layout_constraintTop_toBottomOf="@+id/gridLayout" />

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="343dp"
        android:layout_height="295dp"
        android:layout_marginTop="24dp"
        android:columnCount="8"
        android:rowCount="8"
        android:useDefaultMargins="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/e_score">

        <TextView
            android:id="@+id/e_5_2"
            android:layout_width="@dimen/cell"
            android:layout_height="@dimen/cell"
            android:layout_row="5"
            android:layout_column="6"
            android:layout_margin="@dimen/cell_margin"
            android:background="@drawable/cell_border"
            android:text="" />

        <TextView
            android:id="@+id/e_5_3"
            android:layout_width="@dimen/cell"
            android:layout_height="@dimen/cell"
            android:layout_row="5"
            android:layout_column="7"
            android:layout_margin="@dimen/cell_margin"
            android:background="@drawable/cell_border" />

        <TextView
            android:id="@+id/e_4_1"
            android:layout_width="@dimen/cell"
            android:layout_height="@dimen/cell"
            android:layout_row="3"
            android:layout_column="5"
            android:layout_margin="@dimen/cell_margin"
            android:background="@drawable/cell_border"
            android:text="4" />

        <TextView
            android:id="@+id/e_2_1"
            android:layout_width="@dimen/cell"
            android:layout_height="@dimen/cell"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_margin="@dimen/cell_margin"
            android:background="@drawable/cell_border"
            android:text="2" />

        <TextView
            android:id="@+id/e_5_1"
            android:layout_width="@dimen/cell"
            android:layout_height="@dimen/cell"
            android:layout_row="5"
            android:layout_column="5"
            android:layout_margin="@dimen/cell_margin"
            android:background="@drawable/cell_border"
            android:text="5" />

        <TextView
            android:id="@+id/e_4_2"
            android:layout_width="@dimen/cell"
            android:layout_height="@dimen/cell"
            android:layout_row="4"
            android:layout_column="5"
            android:layout_margin="@dimen/cell_margin"
            android:background="@drawable/cell_border"
            android:text="" />

        <TextView
            android:id="@+id/e_3_2"
            android:layout_width="@dimen/cell"
            android:layout_height="@dimen/cell"
            android:layout_row="3"
            android:layout_column="3"
            android:layout_margin="@dimen/cell_margin"
            android:background="@drawable/cell_border"
            android:text="" />

        <TextView
            android:id="@+id/e_3_1"
            android:layout_width="@dimen/cell"
            android:layout_height="@dimen/cell"
            android:layout_row="3"
            android:layout_column="2"
            android:layout_margin="@dimen/cell_margin"
            android:background="@drawable/cell_border"
            android:text="3" />

        <TextView
            android:id="@+id/e_2_2"
            android:layout_width="@dimen/cell"
            android:layout_height="@dimen/cell"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_margin="@dimen/cell_margin"
            android:background="@drawable/cell_border"
            android:text="" />

        <TextView
            android:id="@+id/e_2_4"
            android:layout_width="@dimen/cell"
            android:layout_height="@dimen/cell"
            android:layout_row="1"
            android:layout_column="4"
            android:layout_margin="@dimen/cell_margin"
            android:background="@drawable/cell_border"
            android:text="" />

        <TextView
            android:id="@+id/e_1_3"
            android:layout_width="@dimen/cell"
            android:layout_height="@dimen/cell"
            android:layout_row="2"
            android:layout_column="3"
            android:layout_margin="@dimen/cell_margin"
            android:background="@drawable/cell_border"
            android:text="" />

        <TextView
            android:id="@+id/e_3_3"
            android:layout_width="@dimen/cell"
            android:layout_height="@dimen/cell"
            android:layout_row="3"
            android:layout_column="4"
            android:layout_margin="@dimen/cell_margin"
            android:background="@drawable/cell_border"
            android:text="" />

        <TextView
            android:id="@+id/e_1_1"
            android:layout_width="@dimen/cell"
            android:layout_height="@dimen/cell"
            android:layout_row="0"
            android:layout_column="3"
            android:layout_margin="@dimen/cell_margin"
            android:background="@drawable/cell_border"
            android:text="1" />

        <TextView
            android:id="@+id/e_1_2"
            android:layout_width="@dimen/cell"
            android:layout_height="@dimen/cell"
            android:layout_row="1"
            android:layout_column="3"
            android:layout_margin="@dimen/cell_margin"
            android:background="@drawable/cell_border"
            android:text="" />
    </GridLayout>

    <TextView
        android:id="@+id/e_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="52dp"
        android:layout_marginTop="40dp"
        android:text="Score: 0"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/guessInput_e"
        android:layout_width="172dp"
        android:layout_height="42dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/cell_border"
        android:gravity="center"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/e_L"
        app:layout_constraintTop_toBottomOf="@+id/gridLayout" />

    <Button
        android:id="@+id/submitBtn_e"
        android:layout_width="82dp"
        android:layout_height="40dp"
        android:layout_marginStart="132dp"
        android:layout_marginTop="8dp"
        android:text="Submit"
        android:textSize="10sp"
        app:layout_constraintStart_toEndOf="@+id/e_S"
        app:layout_constraintTop_toBottomOf="@+id/guessInput_e" />

    <Button
        android:id="@+id/hintBtn"
        android:layout_width="75dp"
        android:layout_height="49dp"
        android:layout_marginStart="172dp"
        android:layout_marginTop="28dp"
        android:text="Hint"
        app:layout_constraintStart_toEndOf="@+id/e_score"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/e_R"
        android:layout_width="@dimen/letter_box_size"
        android:layout_height="@dimen/letter_box_size"
        android:layout_marginStart="25dp"
        android:layout_marginTop="20dp"
        android:text="R"
        android:background="@color/teal_200"
        android:textColor="@color/black"
        android:textSize="@dimen/letter_size"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gridLayout" />

</androidx.constraintlayout.widget.ConstraintLayout>


