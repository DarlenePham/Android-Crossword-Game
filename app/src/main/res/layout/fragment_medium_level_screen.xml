            android:layout_margin="@dimen/cell_margin"
            android:background="@drawable/cell_border"
            android:text="" />

        <TextView
            android:id="@+id/textView3_1"
            android:layout_width="@dimen/cell"
            android:layout_height="@dimen/cell"
            android:layout_row="2"
            android:layout_column="3"
            android:layout_margin="@dimen/cell_margin"
            android:background="@drawable/cell_border"
            android:text="3" />

        <TextView
            android:id="@+id/textView2_2"
            android:layout_width="@dimen/cell"
            android:layout_height="@dimen/cell"
            android:layout_row="3"
            android:layout_column="3"
            android:layout_margin="@dimen/cell_margin"
            android:background="@drawable/cell_border"
            android:text="" />

        <TextView
            android:id="@+id/textView2_3"
            android:layout_width="@dimen/cell"
            android:layout_height="@dimen/cell"
            android:layout_row="2"
            android:layout_column="5"
            android:layout_margin="@dimen/cell_margin"
            android:background="@drawable/cell_border"
            android:text="" />

        <TextView
            android:id="@+id/textView1_3"
            android:layout_width="@dimen/cell"
