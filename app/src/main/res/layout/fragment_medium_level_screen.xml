<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".MediumLevelScreen">

    <TextView
        android:id="@+id/m_H"
        android:layout_width="@dimen/letter_box_size"
        android:layout_height="@dimen/letter_box_size"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:background="#FFC107"
        android:gravity="center"
        android:text="H"
        android:textColor="@color/black"
        android:textSize="@dimen/letter_size"
        app:layout_constraintStart_toEndOf="@+id/m_R"
        app:layout_constraintTop_toBottomOf="@+id/m_A" />

    <TextView
        android:id="@+id/m_C"
        android:layout_width="@dimen/letter_box_size"
        android:layout_height="@dimen/letter_box_size"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:background="@color/yellow"
        android:gravity="center"
        android:text="C"
        android:textColor="@color/black"
        android:textSize="@dimen/letter_size"
        app:layout_constraintStart_toEndOf="@+id/m_H"
        app:layout_constraintTop_toBottomOf="@+id/m_B" />

    <TextView
        android:id="@+id/m_R"
        android:layout_width="@dimen/letter_box_size"
        android:layout_height="@dimen/letter_box_size"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:background="#9C27B0"
        android:gravity="center"
        android:text="R"
        android:textColor="@color/black"
        android:textSize="@dimen/letter_size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/m_T" />

    <TextView
        android:id="@+id/m_T"
        android:layout_width="@dimen/letter_box_size"
        android:layout_height="@dimen/letter_box_size"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:background="@color/teal_700"
        android:gravity="center"
        android:text="T"
        android:textColor="@color/black"
        android:textSize="@dimen/letter_size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gridLayout" />

    <TextView
        android:id="@+id/m_B"
        android:layout_width="@dimen/letter_box_size"
        android:layout_height="@dimen/letter_box_size"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:background="@color/purple_200"
        android:gravity="center"
        android:text="B"
        android:textColor="@color/black"
        android:textSize="@dimen/letter_size"
        app:layout_constraintStart_toEndOf="@+id/m_A"
        app:layout_constraintTop_toBottomOf="@+id/gridLayout" />

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="344dp"
        android:layout_height="351dp"
        android:layout_marginTop="24dp"
        android:columnCount="8"
        android:rowCount="8"
        android:useDefaultMargins="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/m_score">

        <TextView
            android:id="@+id/m_3_6"
            android:layout_width="@dimen/cell"
            android:layout_height="@dimen/cell"
            android:layout_row="6"
            android:layout_column="3"
            android:layout_margin="@dimen/cell_margin"
            android:background="@drawable/cell_border"
            android:text="" />

        <TextView
            android:id="@+id/m_5_2"
            android:layout_width="@dimen/cell"
            android:layout_height="@dimen/cell"
            android:layout_row="5"
            android:layout_column="4"
            android:layout_margin="@dimen/cell_margin"
            android:background="@drawable/cell_border"
            android:text="" />

        <TextView
            android:id="@+id/m_6_1"
            android:layout_width="@dimen/cell"
            android:layout_height="@dimen/cell"
            android:layout_row="5"
            android:layout_column="5"
            android:layout_margin="@dimen/cell_margin"
            android:background="@drawable/cell_border"
            android:text="6" />

        <TextView
            android:id="@+id/m_5_4"
            android:layout_width="@dimen/cell"
            android:layout_height="@dimen/cell"
            android:layout_row="5"
            android:layout_column="6"
            android:layout_margin="@dimen/cell_margin"
            android:background="@drawable/cell_border"
            android:text="" />

        <TextView
            android:id="@+id/m_5_5"
            android:layout_width="@dimen/cell"
            android:layout_height="@dimen/cell"
            android:layout_row="5"
            android:layout_column="7"
            android:layout_margin="@dimen/cell_margin"
            android:background="@drawable/cell_border"
            android:text="" />

        <TextView
            android:id="@+id/m_6_2"
            android:layout_width="@dimen/cell"
            android:layout_height="@dimen/cell"
            android:layout_row="6"
            android:layout_column="5"
            android:layout_margin="@dimen/cell_margin"
            android:background="@drawable/cell_border"
            android:text="" />

        <TextView
            android:id="@+id/m_6_3"
            android:layout_width="@dimen/cell"
            android:layout_height="@dimen/cell"
            android:layout_row="7"
            android:layout_column="5"
            android:layout_margin="@dimen/cell_margin"
            android:background="@drawable/cell_border"
            android:text="" />

        <TextView
            android:id="@+id/m_4_1"
            android:layout_width="@dimen/cell"
            android:layout_height="@dimen/cell"
            android:layout_row="4"
            android:layout_column="0"
            android:layout_margin="@dimen/cell_margin"
            android:background="@drawable/cell_border"
            android:text="4" />

        <TextView
            android:id="@+id/m_2_2"
            android:layout_width="@dimen/cell"
            android:layout_height="@dimen/cell"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_margin="@dimen/cell_margin"
            android:background="@drawable/cell_border"
            android:text="" />

        <TextView
            android:id="@+id/m_2_1"
            android:layout_width="@dimen/cell"
            android:layout_height="@dimen/cell"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_margin="@dimen/cell_margin"
            android:background="@drawable/cell_border"
            android:text="2" />

        <TextView
            android:id="@+id/m_2_4"
            android:layout_width="@dimen/cell"
            android:layout_height="@dimen/cell"
            android:layout_row="5"
            android:layout_column="1"
            android:layout_margin="@dimen/cell_margin"
            android:background="@drawable/cell_border"
            android:text="" />

        <TextView
            android:id="@+id/m_5_1"
            android:layout_width="@dimen/cell"
            android:layout_height="@dimen/cell"
            android:layout_row="5"
            android:layout_column="3"
            android:layout_margin="@dimen/cell_margin"
            android:background="@drawable/cell_border"
            android:text="5" />

        <TextView
            android:id="@+id/m_1_3"
            android:layout_width="@dimen/cell"
            android:layout_height="@dimen/cell"
            android:layout_row="2"
            android:layout_column="7"
            android:layout_margin="@dimen/cell_margin"
            android:background="@drawable/cell_border"
            android:text="" />

        <TextView
            android:id="@+id/m_4_4"
            android:layout_width="@dimen/cell"
            android:layout_height="@dimen/cell"
            android:layout_row="4"
            android:layout_column="3"
            android:layout_margin="@dimen/cell_margin"
            android:background="@drawable/cell_border"
            android:text="" />

        <TextView
            android:id="@+id/m_4_2"
            android:layout_width="@dimen/cell"
            android:layout_height="@dimen/cell"
            android:layout_row="4"
            android:layout_column="1"
            android:layout_margin="@dimen/cell_margin"
            android:background="@drawable/cell_border"
            android:text="" />

        <TextView
            android:id="@+id/m_4_3"
            android:layout_width="@dimen/cell"
            android:layout_height="@dimen/cell"
            android:layout_row="4"
            android:layout_column="2"
            android:layout_margin="@dimen/cell_margin"
            android:background="@drawable/cell_border"
            android:text="" />

        <TextView
            android:id="@+id/m_3_1"
            android:layout_width="@dimen/cell"
            android:layout_height="@dimen/cell"
            android:layout_row="2"
            android:layout_column="3"
            android:layout_margin="@dimen/cell_margin"
            android:background="@drawable/cell_border"
            android:text="3" />

        <TextView
            android:id="@+id/m_3_5"
            android:layout_width="@dimen/cell"
            android:layout_height="@dimen/cell"
            android:layout_row="3"
            android:layout_column="3"
            android:layout_margin="@dimen/cell_margin"
            android:background="@drawable/cell_border"
            android:text="" />

        <TextView
            android:id="@+id/m_3_3"
            android:layout_width="@dimen/cell"
            android:layout_height="@dimen/cell"
            android:layout_row="2"
            android:layout_column="5"
            android:layout_margin="@dimen/cell_margin"
            android:background="@drawable/cell_border"
            android:text="" />

        <TextView
            android:id="@+id/m_3_2"
            android:layout_width="@dimen/cell"
            android:layout_height="@dimen/cell"
            android:layout_row="2"
            android:layout_column="4"
            android:layout_margin="@dimen/cell_margin"
            android:background="@drawable/cell_border"
            android:text="" />

        <TextView
            android:id="@+id/m_3_4"
            android:layout_width="@dimen/cell"
            android:layout_height="@dimen/cell"
            android:layout_row="2"
            android:layout_column="6"
            android:layout_margin="@dimen/cell_margin"
            android:background="@drawable/cell_border"
            android:text="" />

        <TextView
            android:id="@+id/m_1_1"
            android:layout_width="@dimen/cell"
            android:layout_height="@dimen/cell"
            android:layout_row="0"
            android:layout_column="7"
            android:layout_margin="@dimen/cell_margin"
            android:background="@drawable/cell_border"
            android:text="1" />

        <TextView
            android:id="@+id/m_1_2"
            android:layout_width="@dimen/cell"
            android:layout_height="@dimen/cell"
            android:layout_row="1"
            android:layout_column="7"
            android:layout_margin="@dimen/cell_margin"
            android:background="@drawable/cell_border"
            android:text="" />
    </GridLayout>

    <TextView
        android:id="@+id/m_score"
        android:layout_width="135dp"
        android:layout_height="30dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="40dp"
        android:text="Score: 0"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/guessInput_m"
        android:layout_width="172dp"
        android:layout_height="42dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="28dp"
        android:background="@drawable/cell_border"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gridLayout" />

    <Button
        android:id="@+id/submitBtn_m"
        android:layout_width="82dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="72dp"
        android:text="Submit"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/guessInput_m" />

    <TextView
        android:id="@+id/hintBtn"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/help"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/m_A"
        android:layout_width="@dimen/letter_box_size"
        android:layout_height="@dimen/letter_box_size"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:background="@color/teal_200"
        android:gravity="center"
        android:text="A"
        android:textColor="@color/black"
        android:textSize="@dimen/letter_size"
        app:layout_constraintStart_toEndOf="@+id/m_T"
        app:layout_constraintTop_toBottomOf="@+id/gridLayout" />

    <TextView
        android:id="@+id/m_timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>


