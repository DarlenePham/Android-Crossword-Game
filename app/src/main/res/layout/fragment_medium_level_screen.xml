            android:background="@drawable/cell_border"
            android:text="" />
    </GridLayout>

    <TextView
        android:id="@+id/m_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="52dp"
        android:layout_marginTop="40dp"
        android:text="Score: 0"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/guessInput_m"
        android:layout_width="172dp"
        android:layout_height="42dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/cell_border"
        android:gravity="center"
        app:layout_constraintStart_toEndOf="@+id/h_U"
        app:layout_constraintTop_toBottomOf="@+id/gridLayout" />

    <Button
        android:id="@+id/submitBtn"
        android:layout_width="82dp"
        android:layout_height="40dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="8dp"
        android:text="Submit"
        android:textSize="10sp"
        app:layout_constraintStart_toEndOf="@+id/h_E"
        app:layout_constraintTop_toBottomOf="@+id/guessInput_m" />

    <Button
        android:id="@+id/hintBtn"
        android:layout_width="75dp"
        android:layout_height="49dp"
        android:layout_marginStart="172dp"
        android:layout_marginTop="28dp"
        android:text="Hint"
        app:layout_constraintStart_toEndOf="@+id/m_score"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/m_A"
        android:layout_width="@dimen/letter_box_size"
        android:layout_height="@dimen/letter_box_size"
        android:layout_marginStart="25dp"
        android:layout_marginTop="20dp"
        android:text="A"
        android:background="@color/teal_200"
        android:textColor="@color/black"
        android:textSize="@dimen/letter_size"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gridLayout" />

