<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".MediumLevelScreen">

    <TextView
        android:id="@+id/h_E"
        android:layout_width="@dimen/letter_box_size"
        android:layout_height="@dimen/letter_box_size"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:text="H"
        android:textColor="@color/black"
        android:gravity="center"
        android:textSize="@dimen/letter_size"
        android:background="#FFC107"
        app:layout_constraintStart_toEndOf="@+id/h_L"
        app:layout_constraintTop_toBottomOf="@+id/h_U" />

    <TextView
        android:id="@+id/h_T"
        android:layout_width="@dimen/letter_box_size"
        android:layout_height="@dimen/letter_box_size"
        android:layout_marginStart="25dp"
        android:layout_marginTop="10dp"
        android:text="C"
        android:textColor="@color/black"
        android:background="@color/yellow"
        android:textSize="@dimen/letter_size"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/h_A" />

    <TextView
        android:id="@+id/h_L"
        android:layout_width="@dimen/letter_box_size"
        android:layout_height="@dimen/letter_box_size"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:text="R"
        android:background="#9C27B0"
        android:textColor="@color/black"
        android:textSize="@dimen/letter_size"
        android:gravity="center"
        app:layout_constraintStart_toEndOf="@+id/h_T"
        app:layout_constraintTop_toBottomOf="@+id/h_R" />

    <TextView
        android:id="@+id/h_U"
        android:layout_width="@dimen/letter_box_size"
        android:layout_height="@dimen/letter_box_size"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:background="@color/teal_700"
        android:gravity="center"
        android:text="T"
        android:textColor="@color/black"
        android:textSize="@dimen/letter_size"
        app:layout_constraintStart_toEndOf="@+id/h_R"
        app:layout_constraintTop_toBottomOf="@+id/gridLayout" />

    <TextView
        android:id="@+id/h_R"
        android:layout_width="@dimen/letter_box_size"
        android:layout_height="@dimen/letter_box_size"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:text="B"
        android:textColor="@color/black"
        android:background="@color/purple_200"
        android:textSize="@dimen/letter_size"
        android:gravity="center"
        app:layout_constraintStart_toEndOf="@+id/h_A"
        app:layout_constraintTop_toBottomOf="@+id/gridLayout" />

    <GridLayout
